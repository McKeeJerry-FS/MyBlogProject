@model IEnumerable<MyBlogProject.Models.BlogPostModel>

@{
    ViewData["Title"] = "Tech Blog Posts Index";
}

<h1>TechBlog Post Index</h1>

<p>
    <a asp-action="Create">Create New Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abstract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReadyStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var post in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => post.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.PostCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.ReadyStatus)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@post.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@post.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@post.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
