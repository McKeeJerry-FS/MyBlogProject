@model IEnumerable<MyBlogProject.Models.BlogModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Blogs</h1>

<p>
    <!-- This link takes the user to the Create Action to create a blog -->
    <a asp-action="Create">Create a New Blog</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var blog in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => blog.BlogName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.BlogCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.BlogUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.ImageData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.ContentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => blog.BlogUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
